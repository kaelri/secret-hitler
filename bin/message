#!/usr/bin/env node

// DEPENDENCIES
const dotenv = require('dotenv').config();
const axios  = require('axios');

async function sendMessage() {

	let message = process.argv.slice(2).join("\n");

	console.log(message);

	return await axios({
		method: 'post',
		url:    'https://secrethitler.kaelri.local/rest/dev/message/',
		data:   { text: message },
	});

}

sendMessage();
